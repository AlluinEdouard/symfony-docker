{% extends 'base.html.twig' %}

{% block title %}Créer un compte{% endblock %}

{% block body %}
    <div class="container-fluid px-4">
        <h1 class="mt-4">Créer un compte</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="{{ path('app_login') }}">Connexion</a></li>
            <li class="breadcrumb-item active">Inscription</li>
        </ol>

        <div class="card p-4">
            <h5 class="card-title">Formulaire d'inscription</h5>
            
            {{ form_start(registrationForm) }}
                <div class="mb-3">
                    {{ form_row(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Mot de passe',
                        'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'}
                    }) }}
                </div>
                <div class="mb-3 form-check">
                    {{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                    <label class="form-check-label" for="{{ registrationForm.agreeTerms.vars.id }}">
                        Accepter les conditions d'utilisation
                    </label>
                </div>
                <button type="submit" class="btn btn-primary">S'inscrire</button>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
